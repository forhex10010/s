local function BMQZMR_fake_script() -- TextButton.Script 
	local script = Instance.new('Script', TextButton)

	Parent.Parent.TextButton.MouseButton1Down:Connect(function()_.Parent.Parent.TextButton.Text="Your Downlaod Will Start In: 3" wait(1) _.Parent.Parent.TextButton.Text="Your Downlaod Will Start In: 2" wait(1) _.Parent.Parent.TextButton.Text="Your Downlaod Will Start In: 1" wait(1) _.Parent.Parent.TextButton.Text="Your download is ready! Check in (\krnl\workspace) for it." saveinstance()end)end coroutine.wrap(_)() local function _()
end
coroutine.wrap(BMQZMR_fake_script)()
local function TMVFS_fake_script() -- hooh.DragScript 
	local script = Instance.new('LocalScript', hooh)

	--Not made by me, check out this video: https://www.youtube.com/watch?v=z25nyNBG7Js&t=22s
	--Put this inside of your Frame and configure the speed if you would like.
	--Enjoy! Credits go to: https://www.youtube.com/watch?v=z25nyNBG7Js&t=22s
	
	local UIS = game:GetService('UserInputService')
	local frame = script.Parent
	local dragToggle = nil
	local dragSpeed = 0.25
	local dragStart = nil
	local startPos = nil
	
	local function updateInput(input)
		local delta = input.Position - dragStart
		local position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X,
			startPos.Y.Scale, startPos.Y.Offset + delta.Y)
		game:GetService('TweenService'):Create(frame, TweenInfo.new(dragSpeed), {Position = position}):Play()
	end
	
	frame.InputBegan:Connect(function(input)
		if (input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch) then 
			dragToggle = true
			dragStart = input.Position
			startPos = frame.Position
			input.Changed:Connect(function()
				if input.UserInputState == Enum.UserInputState.End then
					dragToggle = false
				end
			end)
		end
	end)
	
	UIS.InputChanged:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
			if dragToggle then
				updateInput(input)
			end
		end
	end)
	
end
coroutine.wrap(TMVFS_fake_script)()
local function EKFFKC_fake_script() -- TextButton_2.LocalScript 
	local script = Instance.new('LocalScript', TextButton_2)

	script.Parent.MouseButton1Click:Connect(function()
		script.Parent.Parent.Visible = false
	end)
	
	
	
	
end
coroutine.wrap(EKFFKC_fake_script)()
local function UEYOCCL_fake_script() -- TextButton_3.LocalScript 
	local script = Instance.new('LocalScript', TextButton_3)

	local frame = script.Parent.Parent.Frame
	local open = false
	
	script.Parent.MouseButton1Click:Connect(function()
		if frame.Visible == false then
			frame.Visible = true
		end
	end)
	
end
coroutine.wrap(UEYOCCL_fake_script)()
